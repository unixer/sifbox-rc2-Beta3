#!/bin/sh

. config/options

get_meta vdr
VDR_VERSION=$PKG_VERSION

get_meta $1

cd $PKG_BUILD_DIR
make all \
  VDRDIR="../vdr-${VDR_VERSION}" \
  DVBDIR="../linux" \
  LIBDIR="." \
  LOCALEDIR="./locale"

do_strip bin lib$1.so.*
do_strip bin lib*.so.*

#  VDRDIR="$ROOT/$BUILD/vdr-${VDR_VERSION}" \
#  LIBDIR="."
